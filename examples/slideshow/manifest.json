{
  "name": "Slideshow",
  "icon": "image-area",
  "background": "green",
  "description": "Plays a series of URLs, apps, videos, or images in rotation with optional transtions.",
  "configTypes": [
    {
      "name": "duration",
      "type": "text",
      "label": "Image Duration (seconds)",
      "required": true,
      "path": "duration"
    },
    {
      "name": "transition",
      "type": "select",
      "label": "Transition",
      "required": true,
      "path": "transition.name",
      "options": [
        {
          "label": "Cube",
          "value": "cube"
        },
        {
          "label": "Slide",
          "value": "slide"
        },
        {
          "label": "Fade",
          "value": "fade"
        }
      ]
    },
    {
      "name": "addAny",
      "type": "mediaArray",
      "multiItem": true,
      "fileTypes": "image/*,video/*,application/postscript",
      "label": "Add Media",
      "required": true,
      "path": "src"
    }
  ],
  "config": {}
}

{
   "name":"Weather Experience",
   "icon":"weather-partlycloudy",
   "background":"yellow",
   "description":"Displays the current conditions and forecast for a given location.",
   "configTypes":[
      {
         "name":"feedId",
         "type":"feed",
         "label":"Feed",
         "required":true,
         "path":"feed_configuration.uuid",
         "supportedTypes": [ "scala:feed:weather" ]
      },
      {
         "name":"temperature",
         "type":"select",
         "label":"Temperature",
         "required":true,
         "path":"temperature",
         "options":[
            {
               "label":"Celsius",
               "value":"c"
            },
            {
               "label":"Fahrenheit",
               "value":"f"
            }
         ]
      },
      {
         "name":"measurements",
         "type":"select",
         "label":"Measurements",
         "required":true,
         "path":"measurements",
         "options":[
            {
               "label":"Metric",
               "value":"metric"
            },
            {
               "label":"Standard",
               "value":"imperial"
            }
         ]
      },
      {
         "name":"dateformat",
         "type":"select",
         "label":"Date Format",
         "required":true,
         "path":"date_format",
         "options":[
            {
               "label":"Day of Week (Sunday - Saturday)",
               "value":"EEEE"
            },
            {
               "label":"US Date, (MM/DD/YYYY)",
               "value":"MM/dd/yyyy"
            },
            {
               "label":"EU Date (DD-MM-YYYY)",
               "value":"dd-MM-yyyy"
            }
         ]
      },
      {
         "name":"refreshRateId",
         "type":"text",
         "label":"Refresh Rate (seconds)",
         "required":true,
         "path":"refresh_rate_seconds"
      }
   ],
   "config":{
      "temperature": "f",
      "measurements": "imperial",
      "refresh_rate_seconds": 600,
      "date_format":"EEEE",
      "icon_set":"set1",
      "temperature_range_c":[
         {
            "upper_value":"15",
            "theme":"theme1"
         },
         {
            "upper_value":"25",
            "theme":"theme2"
         },
         {
            "upper_value":"60",
            "theme":"theme3"
         }
      ],
      "temperature_range_f":[
         {
            "upper_value":"59",
            "theme":"theme1"
         },
         {
            "upper_value":"77",
            "theme":"theme2"
         },
         {
            "upper_value":"140",
            "theme":"theme3"
         }
      ]
   }
}
